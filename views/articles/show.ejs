                    <rect id="Light" x="0" y="0" width="50" height="50" style="fill:none;"/>
                    <g id="Light1" serif:id="Light">
                        <g transform="matrix(0.930233,0,0,0.930233,1.74419,1.74419)">
                            <path d="M25,3.5L27.92,17.949L38.137,11.863L32.051,22.08L46.5,25L32.051,27.92L38.137,38.137L27.92,32.051L25,46.5L22.08,32.051L11.863,38.137L17.949,27.92L3.5,25L17.949,22.08L11.863,11.863L22.08,17.949L25,3.5Z" style="fill:currentColor;"/>
                        </g>
                    </g>
                </svg>
                <input type="checkbox" name="toggle" id="toggle" class="a-new">
