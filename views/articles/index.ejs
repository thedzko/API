                    <!-- LATEST/NEWS -->
                    <h2 id="latest">
                        <span>Latest</span>
                    </h2>
                    <h2 id="newz">
                        <span>News</span>
                    </h2>
                    <% articles.forEach(article=> { %>
                        <div class="news">
                            <a href="articles/<%= article.slug %>">
                                <div class="card" id="1">
                                    <div class="card-content">
                                        <img src="<%= article.path %>" alt="" class="img">
                                        <div>
                                            <div class="text">
                                                <h2><span class="text-bg"><%= article.title %></span></h2>
                                                <div class="author-date">
                                                    <h3 class="author">
                                                        <%= article.author %>
                                                    </h3>
                                                    <h3 class="date"><span class="date-bg"><%= article.createdAt.toLocaleDateString() %></span></h3>
                                                </div>
                                                <p class="description">
                                                    <%= article.description %>
                                                </p>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- Buttons -->
                                    <div class="buttons">
                                        <!-- Dropdown Toggle -->
                                        <a href="" class="dropdown-toggle">...</a>
                                        <!-- Dropdown Menu -->
                                        <div class="dropdown-menu">
                                            <a href="articles/edit/<%= article.id %>" class="button b-edit"><span>Edit</span></a>

                                            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="button">

                                                <button type="submit" class="button b-delete">Delete</button>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }) %>
